# XDG #

# CUSTOM {{{1
export XDG_DOTFILES_HOME="$HOME/dotfiles"
export XDG_LOCAL_HOME="$HOME/.local"

# BASIC {{{1
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$XDG_LOCAL_HOME/share"

# HELPING VARIABLES {{{1
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME/java"
export ELECTRUMDIR="$XDG_DATA_HOME/electrum"
export ELINKS_CONFDIR="$XDG_CONFIG_HOME/elinks"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export GRIPHOME="$XDG_CONFIG_HOME/grip"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
export IMAPFILTER_HOME="$XDG_CONFIG_HOME/imapfilter"
export INPUTRC="$XDG_CONFIG_HOME/readline/inputrc"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/pass"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/config.py"
export RANDFILE="$XDG_CACHE_HOME/rnd"
export VIMDOTDIR="$XDG_CONFIG_HOME/vim"
export VIMINIT='let $MYVIMRC="$XDG_CONFIG_HOME/vim/vimrc" | source $MYVIMRC'
export WINEPREFIX="$XDG_DATA_HOME/wine"
export XAUTHORITY="$XDG_RUNTIME_DIR/Xauthority"
export XINITRC="$XDG_CONFIG_HOME/X11/xinitrc"

# PATH {{{1
export PATH="$XDG_LOCAL_HOME/bin:$PATH"
export PATH="$XDG_LOCAL_HOME/scripts:$PATH"

# HISTORY FILES {{{1

export XDG_HISTORY_DIR="$XDG_CACHE_HOME/history_files"

mkdir -p "$HISTORY_DIR"

export HISTFILE="$XDG_HISTORY_DIR/bash"
export LESSHISTFILE=-
export MYSQL_HISTFILE="$XDG_HISTORY_DIR/mysql"
export SQLITE_HISTORY="$XDG_HISTORY_DIR/sqlite"

# Export from user-dirs.dirs as env variables {{{1

while IFS= read -r dir; do
    [[ "$dir" =~ ^#.*$ ]] && continue
    export $(echo $dir | cut -f1 -d"#")
done < "$XDG_CONFIG_HOME/user-dirs.dirs"

# vim: ft=sh fdm=marker fen
