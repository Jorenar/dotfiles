full_text=|
align=center
color=#BBB
separator=false
separator_block_width=7

[cpu-temp]
command=sensors | grep "Package id 0:" | cut -c15-23
interval=1

[separator]

[cpu-freq]
command=$HOME/.i3/scripts/status_bar/cpu_freq
interval=1

[separator]

[wifi]
command=$HOME/.i3/scripts/status_bar/wifi
interval=5

[separator]

[bluetooth]
command=$HOME/.i3/scripts/status_bar/bluetooth
interval=15

[separator]

[gpu]
command=$HOME/.i3/scripts/status_bar/gpu
interval=once

[separator]

[battery]
command=$HOME/.i3/scripts/status_bar/battery
interval=15

[separator]

[volume]
command=$HOME/.i3/scripts/status_bar/volume
interval=once
signal=10

[separator]

[date]
command=LC_ALL=C date "+%a, %F %T"
interval=1

[separator-transparent]
command=echo " "
interval=once
