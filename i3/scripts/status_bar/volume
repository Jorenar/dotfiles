#!/bin/bash

if [[ $(amixer get Master | command grep % | command awk '{print $3}') == 0 ]]; then
    volume="[X]"
else
    volume=$(amixer get Master | command grep % | command awk '{print $5}'| sed -e 's/\[//' -e 's/\]//')
fi

if [ $(amixer get Master | command grep % | command awk '{print $6}') == "[off]" ]; then
    volume="$volume (muted)"
fi

echo "$volume"
