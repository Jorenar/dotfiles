  if executable("openscad-lsp")
    au User lsp_setup call lsp#register_server(#{
          \   name: "openscad-LSP",
          \   cmd: [ "openscad-lsp", "--stdio" ],
          \   allowlist: [ "openscad" ],
          \ })
