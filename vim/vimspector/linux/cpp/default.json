{
  "configurations": {
    "GDB": {
      "default": true,
      "adapter": "vscode-cpptools",
      "configuration": {
        "type":        "cppdbg",
        "request":     "launch",
        "program":     "${PROG}",
        "MIMode":      "gdb",
        "stopAtEntry": true,
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    },
    "GDB-attach": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "type":        "cppdbg",
        "request":     "attach",
        "program":     "${workspaceRoot}/${PROG}",
        "MIMode":      "gdb",
        "stopAtEntry": true,
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    }
  }
}
