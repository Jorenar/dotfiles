#!/usr/bin/env sh

img="$1"
ref="${img##*/}"
ref="${ref%:*}"

exec podman run -it --rm \
    --net=host \
    --hostname "$ref.$(hostname -s)" \
    -e "HOME" -v "$HOME:$HOME" \
    -e "DISPLAY" -v "/tmp/.X11-unix/:/tmp/.X11-unix/" \
    -v "/:/mnt/host" -w "$PWD" \
    --entrypoint sh \
    "$img" \
    -li
