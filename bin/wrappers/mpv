#!/usr/bin/env sh

if [ -z "$1" ]; then
    ARGS='./'
elif [ "$1" == "-l" ]; then
    if [ -z "$2" ]; then
        ARGS='--loop-playlist ./'
    else
        ARGS="--loop-playlist"
    fi
    shift 1
elif [ "$1" == "--yt" ]; then
    shift 1
    ARGS="--volume=50 --loop-playlist --no-video"
fi

. $XDG_LIB_DIR/shell/wrapper_exec.sh
wrapper_exec $ARGS "$@"
