#!/usr/bin/env sh

if [ "$1" = "--l" ]; then
    lang="-l $2"
    shift 2

    if [ -n "$UNCRUSTIFY_CONFIG" ]; then
        dir="$(dirname $UNCRUSTIFY_CONFIG)"
    else
        dir="$HOME/.uncrustify"
    fi

    cfg="$TMPDIR/uncrustify.cfg"

    mkfifo "$cfg"

    for f in $@; do
        cfgs="$cfgs $dir/$f"
    done

    cat "${UNCRUSTIFY_CONFIG:-"$dir/default"}" $cfgs > "$cfg" &

    for dir in $(echo "$PATH" | tr ":" "\n" | grep -Fxv "$(dirname $0)"); do
        if [ -x "$dir/uncrustify" ]; then
            "$dir/uncrustify" -q --no-backup $lang -c "$cfg"
            break
        fi
    done

    rm $cfg

else
    for dir in $(echo "$PATH" | tr ":" "\n" | grep -Fxv "$(dirname $0)"); do
        [ -x "$dir/uncrustify" ] && exec "$dir/uncrustify" $@
    done
fi
