#!/usr/bin/env -S make -f

MAKEFLAGS += --no-print-directory
.PHONY: _ PHONY
.ONESHELL:

CFLAGS := -Wall -Wextra -pedantic -g -lm


_:
	@$(MAKE)

%:
	@$(MAKE) $*


%.c: PHONY
	$(CC)  $(CFLAGS) -std=gnu99   $@ -o $(*F)

%.cpp: PHONY
	$(CXX) $(CFLAGS) -std=gnu++14 $@ -o $(*F)

%.latex: PHONY
	latexmk -outdir=$(*F).out.d -pdfxe -pdfxelatex="xelatex --shell-escape %O %S" -interaction=nonstopmode $@ 1>&2

%.nasm: PHONY
	nasm -f elf64 -g $@
	ld -g -o $(*F) $(*F).o
	$(RM) $(*F).o

%.asm: PHONY
	$(AS) -o $(*F).o $@
	ld -s -o $(*F) $(*F).o
	$(RM) $(*F).o

%.cs: PHONY
	mcs $@

%.rs: PHONY
	rustc $(*F)

%.java: PHONY
	javac -d $(TMPDIR)/java $@
	jar cvfe $(*F).jar $(*F) -C $(TMPDIR)/java .

%.cobol %.cob %.cbl: PHONY
	cobc -d -O -x -o $(*F) $@

%.go: PHONY
	go build

%.html: PHONY
	tidy -quiet -errors --gnu-emacs yes $@

%.xhtml: PHONY
	tidy -asxhtml -quiet -errors --gnu-emacs yes $@

%.ada: PHONY
	gnatmake $@
	gnatclean -c $@

%.py: PHONY
	python $@

%.sh: PHONY
	shellcheck $@

%.scad: PHONY
	openscad -o $(*F).stl $@


CMakeLists.txt: PHONY
	[ -n "$(*F)" ] && cd $(*F)
	cmake -B build/ -DCMAKE_BUILD_TYPE=Debug
	cmake --build build/ 2> >(tee build/errors.err >&2)
