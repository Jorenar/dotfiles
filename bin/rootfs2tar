#!/usr/bin/env sh

tar -vzcpf rootfs.tar.gz --xattrs --exclude=./rootfs.tar.gz \
    --exclude=/boot \
    --exclude=/dev  \
    --exclude=/mnt  \
    --exclude=/proc \
    --exclude=/run  \
    --exclude=/sys  \
    --exclude='*/cache/*' \
    --exclude='*/log/*'   \
    --exclude='*/tmp/*' \
    --exclude=/tmp/*    \
    --exclude=/tmp/.*   \
    /
