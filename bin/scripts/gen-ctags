#!/usr/bin/env sh

tagsdir="$XDG_DATA_HOME/tags"

generate() {
    file=$1
    lang=$2
    kinds=$3
    shift 3
    ctags -f "$tagsdir/$file" -R -B --sort=yes --kinds-"$lang"="$kinds" --fields=+iaSmz --extras=+qf --language-force="$lang" "$@"
}

generate c     C   +pxlzLD   /usr/include
generate cpp   C++ +pxlzLDAZ /usr/include/c++
generate boost C++ +pxlzLDAZ /usr/include/boost
