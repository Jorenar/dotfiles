#!/usr/bin/env sh

get_gov () {
    cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
}

set_gov () {
    echo "$1" | sudo tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor
}

case "$1" in
    f) set_gov performance ;;
    s) set_gov powersave ;;
    o) set_gov ondemand ;;
    t)
        if [ "$(get_gov)" = "powersave" ]; then
            set_gov performance
        else
            set_gov powersave
        fi
        ;;
    p|*) get_gov ;;
esac
