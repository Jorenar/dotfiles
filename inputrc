# INPUTRC #
# vim: fen fdm=marker

# Turn off bell/beep terminal sound
set bell-style none

# Use Vi mode
set editing-mode vi

# Show which mode is used right now
set show-mode-in-prompt on

# Mode indicators
set vi-ins-mode-string "+"
set vi-cmd-mode-string ":"

# NORMAL mode bindings {{{1
set keymap vi-command

"\ee": emacs-editing-mode

#  INSERT mode  bindings {{{1
set keymap vi-insert

"\ee": emacs-editing-mode
Control-l: clear-screen
TAB: complete

# EMACS "mode" bindings {{{1
set keymap emacs

"\ee": vi-editing-mode
