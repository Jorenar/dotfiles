set help = no
set folder = "/dev/null"
set sidebar_visible = no

set wrap=100
set smart_wrap
set markers = no

set display_filter = \
  "sed -r \"s/^Date:(.*)/date +'Date: %a, %Y-%m-%d %H:%M:%S %z' -d '\\1'/e\""

color hdrdefault cyan default

bind attach,pager g noop
bind attach,pager f noop

bind pager  j   next-line
bind pager  k   previous-line
bind pager  g   top
bind pager  G   bottom

# macro index V :unset\ wait_key<Enter>v|cat<Enter>qq

macro pager q ix
push <Enter>
