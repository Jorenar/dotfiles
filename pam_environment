# Only the most crucial. The rest is in _XDG/variables and env_variables

XDG_LOCAL_HOME   DEFAULT="@{HOME}/.local"

XDG_CACHE_HOME   DEFAULT="${XDG_LOCAL_HOME}/cache"
XDG_CONFIG_HOME  DEFAULT="${XDG_LOCAL_HOME}/config"
XDG_DATA_HOME    DEFAULT="${XDG_LOCAL_HOME}/share"

ZDOTDIR          DEFAULT="${XDG_CONFIG_HOME}/zsh"
