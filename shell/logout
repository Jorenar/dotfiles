# vim: ft=sh

echo "OLDPWD='$PWD'" > "$HISTORY_DIR/oldpwd"

perm_hist="${XDG_DATA_HOME:-$HOME/.local/share}/shell_perm_hist"
if [ -e "$perm_hist" ]; then
    head -$(wc -l < "$perm_hist") "$HISTFILE" | diff - "$perm_hist" >/dev/null 2>&1
    [ $? -ne 0 ] && cat "$perm_hist" "$HISTFILE" | tee "$HISTFILE" > /dev/null
fi
