# vim: ft=sh

# shellcheck disable=SC2142  # Aliases can't use positional parameters. Use a function.


alias amixer-save='mkdir -p $XDG_DATA_HOME/alsa && alsactl --file $XDG_DATA_HOME/alsa/asound.state store'
alias ap1='sudo create_ap wlan0 wlan0 x I_love_BASH' # semi open WiFi network
alias cal='cal -m'
alias del='gio trash'
alias du='du -h'
alias grep='grep --color'
alias i3-exit="i3-msg exit"
alias i3-relog="sed -i '/autostartedx/d' '$TMPFLAGS' && [ -n '$DISPLAY' ] && i3-msg exit || exit"
alias icanhazip='curl icanhazip.com'
alias iwd-restart='sudo systemctl restart iwd.service'
alias less='less -R'
alias ls='ls.hidden -hF -w80 --time-style=iso -I. -I..'
alias mkdir='mkdir -p'
alias mnt='udisksctl mount -b'
alias mount-qemu="mount -t cifs //10.0.2.4/qemu/"
alias o='xdg-open'
alias off='shutdown -h now'
alias pass='EDITOR="vim -u NONE" pass'
alias php-server='php -S 0.0.0.0:8000'
alias python-server='python -m http.server 8000'
alias qmv='command qmv -v -f "do"'
alias rm="echo Use 'del', or the full path i.e. '/bin/rm'"
alias sshd-start='sudo systemctl start sshd'
alias sshd-stop='sudo systemctl stop sshd'
alias suspend='systemctl suspend'
alias umnt='udisksctl unmount -b'
alias update_aur_files='updpkgsums && makepkg --printsrcinfo > .SRCINFO'
alias vi='vim --clean -u DEFAULTS -U NONE -i NONE'
alias wacom-map-output="xsetwacom set \$(xsetwacom list | awk '/stylus/ {print \$8}') MapToOutput 1920x1080+0+0"
alias which='command -v'
alias wine-lnk='wine C:\\windows\\command\\start.exe /Unix'
alias yay-autoremove='yay -Rns $(yay -Qtdq)'
alias yt-mp3='youtube-dl --extract-audio --audio-format mp3'


alias transmission='_f() { transmission-cli "$@" && gio trash "$@"; }; _f ./*.torrent'
alias cheat='_f(){ curl cheat.sh/$1; }; _f'
alias find_='_f(){ find $@ 2>&1 | grep -v "Permission denied" >&2; }; _f'
alias wttr='_f(){ curl wttr.in/$1; }; _f'
