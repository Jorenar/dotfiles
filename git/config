# vim: ft=gitconfig

[user]
    email = dev@joren.ga
    name = Jorengarenar

[github]
    user = Jorengarenar

[init]
    defaultBranch = master

[filter "lfs"]
    clean    = git-lfs clean -- %f
    process  = git-lfs filter-process
    required = true
    smudge   = git-lfs smudge -- %f

[push]
    followTags = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false
    trustExitCode = true

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[pager]
    log  = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[interactive]
    diffFilter = diff-highlight

[alias]
    st = status --short
    lg = log --oneline --graph --abbrev-commit

    cloner  = clone --recursive
    clone1  = clone --depth=1
    clone1r = clone --recursive --depth=1

    change-url = !sh -c 'git remote set-url origin \"$1\"' -
    orphan     = !sh -c 'git checkout --orphan \"$1\" && git rm -rf .' -
    del        = !sh -c 'git reset HEAD \"$@\"' -
    fast       = !sh -c 'git add -A && git commit -m \"$1\" && git push' -
    initial    = !sh -c 'git init && git add -A && git commit -m \"Initial commit\" && git remote add origin \"$1\" && git push -u origin master' -

[include]
    path = ~/.local/aux/git
