# vim: ft=gitconfig

[user]
    email = dev@joren.ga
    name = Jorengarenar

[github]
    user = Jorengarenar

[init]
    defaultBranch = master

[filter "lfs"]
    clean    = git-lfs clean -- %f
    process  = git-lfs filter-process
    required = true
    smudge   = git-lfs smudge -- %f

[push]
    followTags = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false
    trustExitCode = true

[pager]
    # diff-highlight is script provided by git that shows word-by-word diff
    log  = perl $GIT_PATH_TO_DIFF_HIGHLIGHT | less
    show = perl $GIT_PATH_TO_DIFF_HIGHLIGHT | less
    diff = perl $GIT_PATH_TO_DIFF_HIGHLIGHT | less

[alias]
    st = status --short
    lg = log --oneline --graph --abbrev-commit

    cloner  = clone --recursive
    clone1  = clone --depth=1
    clone1r = clone --recursive --depth=1

    change-url = !sh -c 'git remote set-url origin \"$1\"' -
    orphan     = !sh -c 'git checkout --orphan \"$1\" && git rm -rf .' -
    del        = !sh -c 'git reset HEAD \"$@\"' -
    fast       = !sh -c 'git add -A && git commit -m \"$1\" && git push' -
    initial    = !sh -c 'git init && git add -A && git commit -m \"Initial commit\" && git remote add origin \"$1\" && git push -u origin master' -

[include]
    path = ~/.local/aux/git
